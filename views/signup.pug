extends layout

block content
	h1#title Sign Up
	form#dataForm(method="post", action="/signup",  data-method="create", onsubmit="return submitForm()")
		if failed && failed.reason
			p#usernameTaken.errorMsg This username is already taken.
		p#headErrMsg.errorMsg.hidden Please fill out the following fields:
		div#usernameDiv
			label(for="username") Username: 
			input#username(type="text", name="username")
			p.errorMsg.hidden Must be between 3 and 32 characters
		div#passwordDiv
			label(for="password") Password: 
			input#password(type="password", name="password")
			p.errorMsg.hidden Must have 1 number, 1 capital and be at least 8 characters long
		div#confirmPasswordDiv
			label(for="confirmPassword") Confirm Password: 
			input#confirmPassword(type="password")
			p.errorMsg.hidden Passwords do not match
		div#emailDiv
			label(for="email") Email: 
			input#email(type="email", name="email")
			p.errorMsg.hidden Must be valid email
		div#dobDiv 
			label(for="dob") Birthdate: 
			input#dob(type="date", name="dob")
			p.errorMsg.hidden Must be 13 or older 
		div#securityQuestionDiv1
			label(for="securityQuestion1") When is Joe's birthday?
			select#securityQuestion1(name="answer1")
				option(value="0") Jan 09 1998
				option(value="1") Oct 03 1998
				option(value="2") Nov 11 1999
				option(value="3") May 14 1997
		div#securityQuestionDiv2
			label(for="securityQuestion2") When was the US Constitution signed?
			select#securityQuestion2(name="answer2")
				option(value="0") 1783
				option(value="1") 1776
				option(value="2") 1787
				option(value="3") 1912
		div#securityQuestionDiv3
			label(for="securityQuestion3") Who is the best Disney Princess?
			select#securityQuestion3(name="answer3")
				option(value="0") Mulan
				option(value="1") Rapunzel
				option(value="2") Ariel
				option(value="3") Cinderella
		
		div#monsterProfilePic
			label(for="monsterProfilePic") Create your Profile Pic!
			select#monsterProfilePic(name='eyes')
				option(value='1') 1
				option(value='2') 2
				option(value='3') 3
				option(value='4') 4
				option(value='5') 5
				option(value='6') 6
				option(value='7') 7
				option(value='9') 8
				option(value='10') 9
			select#monsterProfilePic(name='nose')
				option(value='2') 1
				option(value='3') 2
				option(value='4') 3
				option(value='5') 4
				option(value='6') 5
				option(value='7') 6
				option(value='8') 7
				option(value='9') 8
			select#monsterProfilePic(name='mouth')
				option(value='1') 1
				option(value='3') 2
				option(value='5') 3
				option(value='6') 4
				option(value='7') 5
				option(value='9') 6
				option(value='10') 7
				option(value='11') 8
			input(type="range" min="1" max="360" class="slider" id="colorPicker")
		div#picture
			img(src=`http://api.adorable.io/avatars/face/eyes${'eyes'}/nose${'nose'}/mouth${'mouth'}/${'hsl'}` id='pic')

		input(type="submit", value="Create Account")
	script(src="/scripts/avatar.js")
	script(src="/scripts/formValidation.js")
